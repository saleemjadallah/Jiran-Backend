# Application
APP_NAME=Souk Loop
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=soukloop
DATABASE_PASSWORD=soukloop
DATABASE_NAME=soukloop
DATABASE_SCHEMA=public

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=change-this-secret-key-with-32-chars!!
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:3000","https://staging.soukloop.com"]

# AWS / Backblaze B2 (S3 compatible)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=eu-central-1
B2_BUCKET_NAME=soukloop-media
B2_ENDPOINT_URL=https://s3.eu-central-003.backblazeb2.com

# Socket.IO
SOCKET_IO_MESSAGE_QUEUE=redis://redis:6379/1

# Email (SMTP)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USERNAME=postmaster@sandbox.mailgun.org
SMTP_PASSWORD=secret
SMTP_FROM_EMAIL=Souk Loop <no-reply@soukloop.com>

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+971500000000

# Stripe
STRIPE_SECRET_KEY=sk_test_change_me
STRIPE_WEBHOOK_SECRET=whsec_change_me

# Sentry / Monitoring
SENTRY_DSN=
