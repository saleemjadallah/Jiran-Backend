# Application
APP_NAME=Jiran
ENVIRONMENT=local
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=jiran
DATABASE_PASSWORD=jiran
DATABASE_NAME=jiran
DATABASE_SCHEMA=public

# Redis
REDIS_URL=redis://redis:6379/0

# Security
# IMPORTANT: Generate a secure 32+ character SECRET_KEY for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_32_PLUS_CHARACTER_SECURE_RANDOM_STRING_HERE
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:3000","https://staging.jiran.com"]

# Backblaze B2 Cloud Storage Configuration
# Get these credentials from Backblaze B2 console > App Keys
B2_ENDPOINT_URL=https://s3.eu-central-003.backblazeb2.com
B2_ACCESS_KEY_ID=<your-key-id-from-backblaze>
B2_SECRET_ACCESS_KEY=<your-application-key-from-backblaze>
B2_REGION=eu-central-003

# B2 Bucket Names (create these in Backblaze B2 console)
B2_BUCKET_LIVE_VIDEOS=jiran-live-videos
B2_BUCKET_VIDEOS=jiran-videos
B2_BUCKET_PHOTOS=jiran-photos
B2_BUCKET_THUMBNAILS=jiran-thumbnails

# Optional: CDN/Custom Domain (leave empty if not using CDN)
B2_CDN_URL=

# Socket.IO
SOCKET_IO_MESSAGE_QUEUE=redis://redis:6379/1

# Email (SMTP)
# Choose one provider and configure accordingly

# Option 1: ZeptoMail (recommended for transactional emails)
# SMTP_HOST=smtp.zeptomail.com
# SMTP_PORT=587
# SMTP_USERNAME=emailappsmtp
# SMTP_PASSWORD=<your-zepto-send-mail-token>
# SMTP_FROM_EMAIL=Souk Loop <noreply@soukloop.com>

# Option 2: Mailgun
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USERNAME=postmaster@mg.soukloop.com
# SMTP_PASSWORD=<your-mailgun-password>
# SMTP_FROM_EMAIL=Souk Loop <noreply@soukloop.com>

# Option 3: AWS SES (requires boto3, already installed)
# Note: For SES, configure AWS credentials instead
# AWS_ACCESS_KEY_ID=<your-aws-key>
# AWS_SECRET_ACCESS_KEY=<your-aws-secret>
# AWS_REGION=eu-central-1
# SMTP_FROM_EMAIL=Souk Loop <noreply@soukloop.com>

# Current (for development - emails logged to console)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=Souk Loop <noreply@soukloop.com>

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+971500000000

# Stripe
STRIPE_SECRET_KEY=sk_test_change_me
STRIPE_WEBHOOK_SECRET=whsec_change_me

# Sentry / Monitoring
SENTRY_DSN=
