      ]
    },
    {
      "name": "Phase 4: Live Streaming",
      "item": [
        {
          "name": "Create Stream",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const data = pm.response.json().data;",
                  "    pm.environment.set('stream_id', data.streamId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
